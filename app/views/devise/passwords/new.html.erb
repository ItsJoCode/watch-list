<div class="row p-5">
  <div class="log col-12 col-sm-4 mx-auto p-4">
    <h2 class="text-center">Mot de passe oubliÃ© ?</h2>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <div class="col-12 mb-2 pt-3">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>
      <div class="col-12 mb-2 pt-3">
        <%= f.submit "Envoyer les instructions par mail", class:"btn-submit btn-lg w-100" %>
      </div>
    <% end %>
  </div>
</div>
